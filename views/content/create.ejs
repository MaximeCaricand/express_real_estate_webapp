<div class="py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-10">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mt-md-4">
                        <h2 class="fw-bold mb-5">CREATE A PROPERTY AD</h2>
                        <form class="needs-validation" method="post" autocomplete="off" novalidate>
                            <div class="row">
                                <div class="form-group form-white mb-4 col-md-6 col-sm-12 need-required">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" name="title" class="form-control" required />
                                </div>
                                <div class="form-group form-white mb-4 col-md-2 col-sm-6 offset-md-1 need-required">
                                    <label for="price">Price</label>
                                    <input type="number" id="price" placeholder="â‚¬" name="price" class="form-control"
                                        required />
                                </div>
                                <div class="form-group form-white mb-4 col-md-3 col-sm-6 need-required">
                                    <label for="date">Availabitily date</label>
                                    <input type="date" id="date" name="date" class="form-control" required />
                                </div>
                                <div class="form-group form-white mb-4 col-md-12 need-required">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="4"
                                        required></textarea>
                                </div>
                                <div class="form-group form-white mb-4 col-sm-12 col-md-4 need-required">
                                    <label for="propertyType">Property type</label>
                                    <select class="form-control" id="propertyType" name="propertyType" required>
                                        <option value="" hidden="true">choose one</option>
                                        <option value="Sale">Sale</option>
                                        <option value="Rent">Rent</option>
                                    </select>
                                </div>
                                <div class="form-group form-white mb-4 col-sm-12 col-md-4 need-required">
                                    <label for="publicationStatus">Publication status</label>
                                    <select class="form-control" id="publicationStatus" name="publicationStatus"
                                        required>
                                        <option value="" hidden="true">choose one</option>
                                        <option value="published">published</option>
                                        <option value="hidden">hidden</option>
                                    </select>
                                </div>
                                <div class="form-group form-white mb-4 col-sm-12 col-md-4 need-required">
                                    <label for="propertyStatus">Property status</label>
                                    <select class="form-control" id="propertyStatus" name="propertyStatus" required>
                                        <option value="" hidden="true">choose one</option>
                                        <option value="Available">Available</option>
                                        <option value="Rented">Rented</option>
                                        <option value="Sold">Sold</option>
                                    </select>
                                </div>
                            </div>
                            <button class="btn btn-light btn-lg mt-5 px-5" type="submit">Confirm</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>