<link rel="stylesheet" href="/css/styleAds.css">
<% var colNames = ['title', 'propertyType', 'propertyStatus', 'publicationStatus']; %>

<div id="startPage">
    <h1 class="text-center">Your ads</h1>
    <div class="row">
        <% if(params.ads.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped mt-4">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Property type</th>
                        <th scope="col">Property status</th>
                        <th scope="col">Publication status</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var adIndex = 0; adIndex < params.ads.length; adIndex++) { %>
                    <tr>
                        <% for(var colIndex = 0; colIndex < colNames.length; colIndex++) { %>
                        <td class="text-truncate" style="max-width: 300px;">
                            <%= params.ads[adIndex][colNames[colIndex]] %></td>
                        <% } %>
                        <td>
                            <%= params.ads[adIndex].price %> â‚¬
                            <%= (params.ads[adIndex].propertyType === "Rent" ? " / month " : "") %>
                        </td>
                        <td>
                            <form class="hidden-form" action="my-ads/search" method="post">
                                <input name="id" value="<%= params.ads[adIndex].id%>" hidden>
                                <button type="submit"><i class="fas fa-search"></i></button>
                            </form>
                            <form class="hidden-form" action="my-ads/update" method="post">
                                <input name="id" value="<%= params.ads[adIndex].id%>" hidden>
                                <button type="submit"><i class="fas fa-pen"></i></button>
                            </form>
                            <form class="hidden-form" id="delete-form" action="my-ads/delete" method="post">
                                <input name="id" value="<%= params.ads[adIndex].id%>" hidden>
                                <button type="button" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <h2 class="text-center"> You haven't posted any ads yet </h1>
            <% } %>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm delete</h5>
            </div>
            <div class="modal-body">
                Do you really want to delete this ad ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" onclick="confirmDialg()" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDialg() {
        document.getElementById('delete-form').submit();
    }
</script>