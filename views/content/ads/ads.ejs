<!DOCTYPE html>
<html>
<head>
    <%- include('../../partials/head'); %>

    <style>
        #selectAdImage:hover {
            background-color: rgba(25, 186, 186, 0.2);
        }
        #selectAdDispo {
            color: rgba(13, 175, 48, 0.8);
            text-align: right;
            vertical-align: top;
        }
        #selectAdIndispo {
            color: rgba(253, 27, 27, 0.8);
            text-align: right;
            vertical-align: top;
        }
        .containerdiv {
            position: relative;
            text-align: center;
        }
        .cornerimage {
            position: absolute;
        }
    </style>
</head>


<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>


    <main>
        <h1>Voici les diff√©rentes annonces du moment</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <% var nbColonne = 3; %>
                <% for(var lig = 0; lig < obj.length; lig) { %>
                    <tr colspan="<%= nbColonne %>">
                        <% for(var col = 0; col < nbColonne; col++) { %>
                            
                            <td id="selectAdImage" style="cursor:pointer;" onclick="location.href = '/content/ads/detail?id=<%= ads[lig].id %>';">
                                <% var larg = 350; var haut = 350; %>
                                <% var estDispo = obj[lig].status === "DISPONIBLE"; %>

                                <div class="containerdiv">
                                    <% if(! estDispo) { %>
                                        <img class="img-responsive cornerimage"
                                        src="../../../images/nondispo.png"
                                        alt="images/nondispo.png"
                                        title="<%= obj[lig].title %>"
                                        width="<%= larg %>" height="<%= haut %>">
                                    <% } %>

                                    <img class="img-responsive rounded b-lazy b-loaded"
                                    src="../../../<%= obj[lig].src_images[0] %>"
                                    alt="<%= obj[lig].title %>"
                                    title="<%= obj[lig].title %>"
                                    width="<%= larg %>" height="<%= haut %>">
                                </div>

                                <div class="info">
                                    <table style="margin-left: 32px;" width="<%= larg %>">
                                        <tr>
                                            <td><%= obj[lig].title %></td>
                                            <td id="<%= (estDispo ? "selectAdDispo" : "selectAdIndispo") %>" rowspan="2">
                                                <%= (estDispo ?
                                                    "("+obj[lig].status+") "+obj[lig].type :
                                                    obj[lig].status)
                                                %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><%= obj[lig].price %></td>
                                        </tr>
                                    </table>
                                </div>
                            </td>

                        <%  lig++;
                            if(lig >= obj.length)
                                col = nbColonne;
                        } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </main>
    

    <%- include('../../partials/footer'); %>
</body>
</html>
