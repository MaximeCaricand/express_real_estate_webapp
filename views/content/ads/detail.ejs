<!DOCTYPE html>
<html>
<head>
    <%- include('../../partials/head'); %>
</head>


<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>


    <main>
        <h1>Regardons en d√©tail l'annonce : '<%= obj.title %>'</h1>
        
        <div class="row" style="border:none; background:transparent; height:280px;">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <img class="replace-2x img-responsive b-lazy b-loaded"
                src="../../../<%= obj.src_images[0] %>"
                alt="<%= obj.title %>"
                title="<%= obj.title %>"
                itemprop="image" width="100%" height="230px"/>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-12">
                <h3 style="margin-bottom: 0; color:#03225C;"><%= obj.title %></h3>
                <h3 style="color:#0daf30;"><%= obj.price %></h3>

                <% var descript = ad.description.split('\n'); %>
                <p class="text-justify" style="font-size:12px; color:#03225C;"></p>
                    <% for(var br = 0; br < descript.length; br++) { %>
                        <%= descript[br] %><br>
                    <% } %>
                </p>
            </div>
        </div>
    </main>
    

    <%- include('../../partials/footer'); %>
</body>
</html>
