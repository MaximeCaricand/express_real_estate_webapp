<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.min.js"></script>
</head>


<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-md-5 mt-md-4">
                        <h2 class="fw-bold mb-2 text-uppercase">Connexion</h2>
                        <p class="text-white-50 mb-5">Please enter your login and password!</p>
                        <%- include('../template/header')-%>
                            <div class="form-outline form-white mb-4">
                                <input type="email" id="typeEmailX" placeholder="Email"
                                    class="form-control form-control-lg" />
                            </div>
                            <div class="form-outline form-white mb-4">
                                <input type="password" id="typePasswordX" placeholder="Mot de passe"
                                    class="form-control form-control-lg" />
                            </div>
                            <button class="btn btn-light btn-lg px-5" type="submit">Login</button>
                    </div>
                    <div>
                        <p class="mb-0">Don't have an account? <a href="/register" class="text-white-50 fw-bold">Sign
                                Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>